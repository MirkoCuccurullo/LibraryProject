<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" id="VBLogin" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="347.0" xmlns="http://javafx.com/javafx/17.0.2-ea">
    <children>
        <Label text="Login" underline="true">
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <VBox.margin>
                <Insets left="125.0" top="20.0"/>
            </VBox.margin>
            <font>
                <Font name="Britannic Bold" size="30.0"/>
            </font>
        </Label>
        <TextField fx:id="fieldUsername" maxWidth="240.0" prefHeight="26.0" prefWidth="337.0" promptText="Username">
            <VBox.margin>
                <Insets left="50.0" right="50.0" top="50.0"/>
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="fieldPassword" maxWidth="240.0" promptText="Password">
            <VBox.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </VBox.margin>
        </PasswordField>
        <Button fx:id="buttonLogin" mnemonicParsing="false" onAction="#onLoginButtonClick" prefWidth="80.0"
                text="Login">
            <VBox.margin>
                <Insets left="50.0"/>
            </VBox.margin>
        </Button>
        <Label fx:id="labelError" textFill="#f70707">
            <VBox.margin>
                <Insets left="50.0" top="20.0"/>
            </VBox.margin>
        </Label>
    </children>
</VBox>
